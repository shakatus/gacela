<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label "Nombre" %><br/>
    <%= f.text_field :name, autofocus: true %>
  </div>
  <% if resource_name.to_s == "user" %>
      <div class="field">
        <%= f.label "Apellido" %><br/>
        <%= f.text_field :last_name, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label "Telefono" %><br/>
        <%= f.number_field :phone, autofocus: true %>
      </div>
  <% else %>
    <div class="field">
      <%= f.label "Nickname" %><br/>
      <%= f.text_field :nickname, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label "NIT" %><br/>
      <%= f.text_field :nit, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label "Pais" %><br/>
      <%= f.text_field :country, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label "Ciudad" %><br/>
      <%= f.text_field :city, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label "Departamento" %><br/>
      <%= f.text_field :departament, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label "Direccion" %><br/>
      <%= f.text_field :direction, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label "Telefono" %><br/>
      <%= f.number_field :phone, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label "Fax" %><br/>
      <%= f.text_field :fax, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label "WebSite" %><br/>
      <%= f.text_field :web_site, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label "Representante Legal" %><br/>
      <%= f.text_field :rep_legal, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label "Fecha" %><br/>
      <%= f.text_field :date, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label "DUNS" %><br/>
      <%= f.text_field :duns, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label "CIIU" %><br/>
      <%= f.text_field :ciiu, autofocus: true %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
